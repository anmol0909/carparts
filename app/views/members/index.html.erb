<div class="min-h-screen bg-gray-100 flex flex-col md:flex-row">
  <!-- Sidebar -->
  <%= render "shared/sidebar" %>

  <div class="flex-1 flex flex-col">
    <!-- Navbar -->
    <%= render "shared/navbar" %>

    <main class="p-4 md:p-6">
      <div class="w-full">
        <div class="max-w-5xl mx-auto mt-10">
          <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Members</h1>
            <%= link_to "Add New Member", new_member_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
          </div>

          <div class="overflow-x-auto bg-white rounded shadow">
            <table class="w-full border-gray-200 shadow-lg rounded-lg overflow-hidden">
              <thead class="bg-gray-100 text-black">
                <tr>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Name</th>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Email</th>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Phone Number</th>
                  <th class="px-6 py-3 text-left text-sm font-semibold">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @members.each do |member| %>
                  <tr>
                    <td class="px-6 py-4"><%= member.name %></td>
                    <td class="px-6 py-4"><%= member.email %></td>
                    <td class="px-6 py-4"><%= member.phone_number %></td>
                    <td class="px-6 py-3 space-x-2">
                      <%= link_to "Edit", edit_member_path(member), class: "inline-block bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition text-sm" %>
                      <%= button_to "Delete", member_path(member), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-block bg-red-600 text-white px-1 py-1 rounded-md hover:bg-red-700 transition text-sm" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
