<div class="min-h-screen bg-gray-100 flex flex-col md:flex-row">
  <!-- Sidebar -->
  <%= render "shared/sidebar" %>

  <div class="flex-1 flex flex-col">
    <!-- Navbar -->
    <%= render "shared/navbar" %>

    <main class="p-4 md:p-6">
      <div class="w-full">
        <div class="max-w-3xl mx-auto mt-10 bg-white rounded shadow p-6">
          <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Member Details</h1>
          </div>

          <div class="space-y-4">
            <p>
              <span class="font-semibold">Name:</span>
              <%= @member.name %>
            </p>
            <p>
              <span class="font-semibold">Email:</span>
              <%= @member.email %>
            </p>
            <p>
              <span class="font-semibold">Phone Number:</span>
              <%= @member.phone_number %>
            </p>
          </div>

          <div class="mt-6 flex space-x-3">
            <%= link_to "Edit", edit_member_path(@member), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
            <%= link_to "Back to Members", members_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
            <%= link_to "Delete", member_path(@member), 
                        method: :delete, 
                        data: { confirm: "Are you sure?" }, 
                        class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition" %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
