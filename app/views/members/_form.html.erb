<%= form_with(model: @member, local: true) do |form| %>
  <% if @member.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
      <h2 class="font-bold">Please fix the following errors:</h2>
      <ul class="list-disc list-inside">
        <% @member.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-semibold" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :email, class: "block text-gray-700 font-semibold" %>
    <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :phone_number, class: "block text-gray-700 font-semibold" %>
    <%= form.number_field :phone_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex justify-end space-x-2">
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
    <%= link_to "Back to Members", members_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
  </div>
<% end %>
