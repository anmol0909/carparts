<%= form_with(model: @item, local: true) do |form| %>
  <% if @item.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
      <h2 class="font-bold">Please fix the following errors:</h2>
      <ul class="list-disc list-inside">
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-semibold"%>
    <%= form.text_field :name, class: "mt-1 py-2 px-2 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter Item Name"%>
  </div>

  <div class="mb-4">
    <%= form.label :quantity, class: "block text-gray-700 font-semibold" %>
    <%= form.number_field :quantity, class: "mt-1 py-2 px-2 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500", placeholder: "Enter Quantity"%>
  </div>

  <div class="mb-4">
    <%= form.label :status, class: "block text-gray-700 font-semibold" %>
    <%= form.select :status, options_for_select(["Available", "Unavailable", "Tracked"], @item.status), {}, class: "mt-1 py-2 px-2 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex justify-end space-x-2">
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
    <%= link_to "Back to Items", items_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
  </div>
<% end %>
