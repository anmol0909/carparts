<div class="min-h-screen bg-gray-100 flex flex-col md:flex-row">
  <!-- Sidebar -->
  <%= render "shared/sidebar" %>

  <div class="flex-1 flex flex-col">
    <!-- Navbar -->
    <%= render "shared/navbar" %>

    <main class="p-4 md:p-6">
      <div class="mt-6 md:mt-10 bg-white rounded-lg shadow-md p-4 md:p-6">
        <div class="w-full px-6">
          <h1 class="text-2xl font-bold mb-4"><%= @item.name %></h1>

          <div class="space-y-2">
            <p><strong>Status:</strong> <%= @item.status %></p>
            <p><strong>Quantity:</strong> <%= @item.quantity %></p>
            <p><strong>Created At:</strong> <%= @item.created_at.strftime("%d %b %Y, %I:%M %p") %></p>
            <p><strong>Last Updated:</strong> <%= @item.updated_at.strftime("%d %b %Y, %I:%M %p") %></p>
          </div>

          <div class="mt-6 flex space-x-3">
            <%= link_to "Edit", edit_item_path(@item), 
                  class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>

            <%= link_to "Back to Inventory", item_path, 
                  class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
            
            <%= button_to "Delete", item_path(@item), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-block bg-red-600 text-white px-4 py-3 rounded hover:bg-red-700 transition text-sm" %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
