<header class="bg-white shadow-md p-4 flex justify-between items-center">
  <!-- Mobile menu button -->
  <button
    id="menu-btn"
    class="md:hidden text-gray-700 focus:outline-none"
    onclick="document.getElementById('sidebar').classList.toggle('hidden')"
  >
    <i class="fas fa-bars text-xl"></i>
  </button>

  <% heading =
    if controller_name == "dashboard" && action_name == "index"
      "Dashboard Panel"
    elsif controller_name == "items" && action_name == "index"
      "Inventory Management"
    elsif controller_name == "items" && action_name == "new"
      "Add New Item"
    elsif controller_name == "items" && action_name == "edit"
      "Edit Item"
    elsif controller_name == "items" && action_name == "show"
      "Item Details"
    elsif controller_name == "orders" && action_name == "index"
      "Orders History"
    elsif controller_name == "orders" && action_name == "show"
      "Order Details"
    elsif controller_name == "members" && action_name == "index"
      "Members List"
    elsif controller_name == "members" && action_name == "new"
      "Add New Member"
    elsif controller_name == "members" && action_name == "edit"
      "Edit Member"
    elsif controller_name == "members" && action_name == "show"
      "Member Details"
    else
      "Dashboard Panel"
    end %>

  <h2 class="text-lg font-semibold text-gray-800"><%= heading %></h2>

  <div class="flex items-center space-x-2 md:space-x-4">
    <% unless current_page?(dashboard_index_path) %>
    <div class="relative">
      <input type="search" placeholder="Search..." class="w-30 lg:w-full md:px-4 md:py-2 px-2 py-1 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
      <button class="absolute right-0 top-0 mt-2 mr-3 text-gray-500">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>
    </div>
    <% end %>
  </div>
</header> 