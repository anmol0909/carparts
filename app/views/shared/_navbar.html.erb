<header class="bg-white shadow-md p-4 flex justify-between items-center">
    <!-- Mobile menu button -->
    <button
    id="menu-btn"
    class="md:hidden text-gray-700 focus:outline-none"
    onclick="document.getElementById('sidebar').classList.toggle('hidden')"
    >
    <i class="fas fa-bars text-xl"></i>
    </button>

    <h2 class="text-lg font-semibold text-gray-800">Dashboard Control Panel</h2>

    <div class="flex items-center space-x-2 md:space-x-4">
    <input
        type="text"
        placeholder="Search..."
        class="px-2 md:px-3 py-1 md:py-2 border rounded-lg focus:outline-none text-sm md:text-base"
    />
    <%= button_to destroy_user_session_path,
        method: :delete,
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to log out?" },
        class: "bg-blue-600 text-white px-3 md:px-4 py-1 md:py-2 rounded-lg hover:bg-blue-700 text-sm md:text-base" do %>
    Logout
    <% end %>
    </div>
</header>