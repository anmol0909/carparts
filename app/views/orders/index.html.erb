<div class="min-h-screen bg-gray-100 flex flex-col md:flex-row">
  <!-- Sidebar -->
  <%= render "shared/sidebar" %>

  <div class="flex-1 flex flex-col">
    <!-- Navbar -->
    <%= render "shared/navbar" %>

    <main class="p-4 md:p-6">
      <div class="w-full">
        <div class="overflow-x-auto bg-white rounded shadow">
          <table class="w-full border-gray-200 shadow-lg rounded-lg overflow-hidden">
            <thead class="bg-gray-100 text-black">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-semibold">ID</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Item</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Member</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Quantity</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Return By</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Borrowed By</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Status</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Description</th>
                <th class="px-6 py-3 text-left text-sm font-semibold">Created At</th>
                <th class="px-6 py-3 text-left text-sm font-semibold flex justify-center">Action</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @orders.each do |order| %>
                <tr>
                  <td class="px-6 py-4"><%= order.id %></td>
                  <td class="px-6 py-4"><%= order.item.name %></td>
                  <td class="px-6 py-4"><%= order.member.name %></td>
                  <td class="px-6 py-4"><%= order.quantity %></td>
                  <td class="px-6 py-4"><%= order.return_by %></td>
                  <td class="px-6 py-4"><%= order.borrowed_by %></td>
                  <td class="px-6 py-4"><%= order.status.capitalize %></td>
                  <td class="px-6 py-4"><%= order.description %></td>
                  <td class="px-6 py-4"><%= order.created_at.strftime("%d %b %Y") %></td>
                  <td class="px-6 py-3 space-x-1">
                    <div class="flex space-x-2">
                      <%= link_to "Show", order_path(order), class: "inline-block bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition text-sm" %>
                      <%= button_to "Delete", order_path(order), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-block bg-red-600 text-white px-1 py-1 rounded-md hover:bg-red-700 transition text-sm" %>                
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% if @orders.empty? && params[:q].present? %>
            <p class="text-center text-gray-600 mt-4">No items found for "<%= params[:q] %>"</p>
          <% end %>
        </div>
      </div>
    </main>
  </div>
</div>
