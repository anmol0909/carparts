<div class="min-h-screen bg-gray-100 flex flex-col md:flex-row">
  <!-- Sidebar -->
  <%= render "shared/sidebar" %>

  <div class="flex-1 flex flex-col">
    <!-- Navbar -->
    <%= render "shared/navbar" %>

    <main class="p-4 md:p-6">
      <div class="max-w-3xl mx-auto">
        <div class="bg-white shadow rounded-lg p-6">
          <!-- Item name as header -->
          <h1 class="text-2xl font-bold mb-4 text-gray-900"><%= @order.item.name %></h1>

          <!-- Details -->
          <p><span class="font-bold">Status:</span> <%= @order.status %></p>
          <p><span class="font-bold">Quantity:</span> <%= @order.quantity %></p>
          <p><span class="font-bold">Return By:</span> <%= @order.return_by %></p>
          <p><span class="font-bold">Borrowed By:</span> <%= @order.borrowed_by %></p>
          <p><span class="font-bold">Member:</span> <%= @order.member.name %></p>
          <p><span class="font-bold">Description:</span> <%= @order.description %></p>
          <p><span class="font-bold">Created At:</span> <%= @order.created_at.strftime("%d %b %Y, %I:%M %p") %></p>
          <p><span class="font-bold">Last Updated:</span> <%= @order.updated_at.strftime("%d %b %Y, %I:%M %p") %></p>

          <!-- Buttons -->
          <div class="mt-6 flex space-x-3">
            <%= link_to "Back to Orders", orders_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
            <%= link_to "Delete", order_path(@order), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition" %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
