<div class="min-h-screen bg-gray-100 flex flex-col md:flex-row">
  <!-- Sidebar -->
<!-- app/views/dashboard/index.html.erb -->

<aside id="sidebar" class="w-64 bg-white shadow-md md:block hidden">
  <div class="p-6">
    <h1 class="text-xl font-bold text-gray-800">Car Parts</h1>
  </div>
  <nav class="mt-6 space-y-1">
    <%= link_to root_path, class: "flex items-center px-6 py-2 text-gray-700 hover:bg-gray-200" do %>
      <i class="fas fa-home mr-3"></i> Home
    <% end %>

    <%= link_to root_path, class: "flex items-center px-6 py-2 text-gray-700 hover:bg-gray-200" do %>
      <i class="fas fa-boxes mr-3"></i> Check Inventory
    <% end %>

    <%= link_to root_path, class: "flex items-center px-6 py-2 text-gray-700 hover:bg-gray-200" do %>
      <i class="fas fa-history mr-3"></i> Past Orders
    <% end %>

    <%= link_to root_path, class: "flex items-center px-6 py-2 text-gray-700 hover:bg-gray-200" do %>
      <i class="fas fa-plus-circle mr-3"></i> Add Item
    <% end %>

    <%= link_to root_path, class: "flex items-center px-6 py-2 text-gray-700 hover:bg-gray-200" do %>
      <i class="fas fa-user-plus mr-3"></i> Add Member
    <% end %>
  </nav>
</aside>


  <!-- Main Content -->
  <div class="flex-1 flex flex-col">
    <!-- Navbar -->
    <header class="bg-white shadow-md p-4 flex justify-between items-center">
      <!-- Mobile menu button -->
      <button
        id="menu-btn"
        class="md:hidden text-gray-700 focus:outline-none"
        onclick="document.getElementById('sidebar').classList.toggle('hidden')"
      >
        <i class="fas fa-bars text-xl"></i>
      </button>

      <h2 class="text-lg font-semibold text-gray-800">Dashboard Control Panel</h2>

      <div class="flex items-center space-x-2 md:space-x-4">
        <input
          type="text"
          placeholder="Search..."
          class="px-2 md:px-3 py-1 md:py-2 border rounded-lg focus:outline-none text-sm md:text-base"
        />
      <%= button_to destroy_user_session_path,
            method: :delete,
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to log out?" },
            class: "bg-blue-600 text-white px-3 md:px-4 py-1 md:py-2 rounded-lg hover:bg-blue-700 text-sm md:text-base" do %>
        Logout
      <% end %>
      </div>
    </header>

    <!-- Content Section -->
    <main class="p-4 md:p-6">
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
        <div class="bg-blue-400 p-4 md:p-6 rounded-lg shadow-md">
          <h3 class="text-xl md:text-3xl font-bold text-white">25</h3>
          <h3 class="text-xl mt-3 md:text-xl font-bold text-white">Items Tracked</h3>
        </div>
        <div class="bg-green-400 p-4 md:p-6 rounded-lg shadow-md">
          <h3 class="text-xl md:text-3xl font-bold text-white">17</h3>
          <h3 class="text-xl mt-3 md:text-xl font-bold text-white">Items Available</h3>
        </div>
        <div class="bg-orange-400 p-4 md:p-6 rounded-lg shadow-md">
          <h3 class="text-xl md:text-3xl font-bold text-white">25</h3>
          <h3 class="text-xl mt-3 md:text-xl font-bold text-white">Items Unavailable</h3>
        </div>
        <div class="bg-yellow-400 p-4 md:p-6 rounded-lg shadow-md">
          <h3 class="text-xl md:text-3xl font-bold text-white">25</h3>
          <h3 class="text-xl mt-3 md:text-xl font-bold text-white">Expoired Orders</h3>
        </div>
      </div>

      <!-- Table Section -->
      <div class="mt-6 md:mt-10 bg-white rounded-lg shadow-md p-4 md:p-6 overflow-x-auto">
        <h4 class="text-md md:text-lg font-semibold text-gray-800 mb-4">Orders (3)</h4>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          
          <div class="overflow-x-auto">
            <table class="w-full border-collapse text-sm md:text-base">
              <thead>
                <tr class="bg-gray-100 text-left">
                  <th class="p-2 md:p-3">Description</th>
                  <th class="p-2 md:p-3">Qty</th>
                  <th class="p-2 md:p-3">Return By</th>
                  <th class="p-2 md:p-3">Borrowed By</th>
                  <th class="p-2 md:p-3">Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b">
                  <td class="p-2 md:p-3">White LEDs</td>
