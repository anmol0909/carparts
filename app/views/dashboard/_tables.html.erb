<div class="mt-6 md:mt-10 bg-white rounded-lg shadow-md p-4 md:p-6">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    
    <!-- Orders Table -->
    <div class="overflow-x-auto">
      <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        Orders <span class="text-sm ml-1 text-gray-500">(<%= @orders.count %>)</span>
      </h4>
      <table class="w-full border border-gray-200 rounded-lg overflow-hidden text-sm md:text-base">
        <thead class="bg-gray-50 font-bold">
          <tr>
            <th class="px-4 py-3 text-left text-gray-700">Description</th>
            <th class="px-4 py-3 text-left text-gray-700">Qty</th>
            <th class="px-4 py-3 text-left text-gray-700">Return By</th>
            <th class="px-4 py-3 text-left text-gray-700">Borrowed By</th>
            <th class="px-4 py-3 text-center text-gray-700">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @orders.limit(10).each do |order| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3"><%= truncate(order.description, length: 20) %></td>
              <td class="px-4 py-3"><%= order.quantity %></td>
              <td class="px-4 py-3 text-red-600"><%= order.created_at.strftime("%Y-%m-%d") %></td>
              <td class="px-4 py-3">Alex</td>
              <td class="px-4 py-3 text-center">
                <div class="flex items-center justify-center space-x-4">
                  <%= link_to order_path(order), class: "text-blue-500 hover:text-blue-700" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= button_to order_path(order),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure?" },
                      class: "text-red-500 hover:text-red-700 bg-transparent border-0 p-0" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mr-4 text-end mt-2">
        <%= link_to "See More", orders_path, class: "inline-block px-4 py-1 text-sm font-medium text-white bg-blue-600 rounded-lg shadow hover:bg-blue-700" %>
      </div>
    </div>

    <!-- Members Table -->
    <div class="overflow-x-auto">
      <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        Members <span class="text-sm ml-1 text-gray-500">(<%= @members.count %>)</span>
      </h4>
      <table class="w-full border border-gray-200 rounded-lg overflow-hidden text-sm md:text-base">
        <thead class="bg-gray-50 font-bold">
          <tr>
            <th class="px-4 py-3 text-left text-gray-700">Name</th>
            <th class="px-4 py-3 text-left text-gray-700">Email</th>
            <th class="px-4 py-3 text-left text-gray-700">Phone</th>
            <th class="px-4 py-3 text-center text-gray-700">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @members.limit(10).each do |member| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3"><%= truncate(member.name, length: 20) %></td>
              <td class="px-4 py-3"><%= truncate(member.email, length: 20) %></td>
              <td class="px-4 py-3"><%= member.phone_number %></td>
              <td class="px-4 py-3 text-center">
                <div class="flex items-center justify-center space-x-4">
                  <%= link_to edit_member_path(member), class: "text-blue-500 hover:text-blue-700" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= button_to member_path(member),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this member?" },
                      class: "text-red-500 hover:text-red-700 bg-transparent border-0 p-0" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="mr-4 text-end mt-2">
        <%= link_to "See More", members_path, class: "inline-block px-4 py-1 text-sm font-medium text-white bg-blue-600 rounded-lg shadow hover:bg-blue-700" %>
      </div>
    </div>
  </div>
</div>  